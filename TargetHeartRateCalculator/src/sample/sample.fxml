<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <children>
      <HBox alignment="CENTER" VBox.vgrow="NEVER">
         <children>
            <Label text="Enter your age:">
               <HBox.margin>
                  <Insets right="25.0" />
               </HBox.margin>
            </Label>
            <TextField fx:id="ageTextField" />
         </children>
         <padding>
            <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
         </padding>
      </HBox>
      <VBox alignment="CENTER">
         <children>
            <Label fx:id="targetHeartRateLabel" text="Your target heart rate is:">
               <VBox.margin>
                  <Insets bottom="15.0" />
               </VBox.margin>
               <font>
                  <Font size="17.0" />
               </font>
            </Label>
            <Label fx:id="ageErrorLabel" text="Please enter a valid age!" textFill="RED" visible="false">
               <font>
                  <Font name="System Bold" size="22.0" />
               </font>
            </Label>
            <Label fx:id="maxHeartRateLabel" text="Your maximum heart rate is:">
               <font>
                  <Font size="17.0" />
               </font>
            </Label>
         </children>
         <padding>
            <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
         </padding>
      </VBox>
      <VBox alignment="CENTER">
         <children>
            <Button fx:id="calculateButton" mnemonicParsing="false" text="Calculate" />
         </children>
         <padding>
            <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
         </padding>
      </VBox>
   </children>
</VBox>
